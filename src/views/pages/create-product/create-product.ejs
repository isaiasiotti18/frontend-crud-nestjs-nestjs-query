<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../../partials/head') %>
  <title>Create Product</title>
</head>
<body class="container">
  <nav class="navbar navbar-expand-lg bg-light">
    <%- include('../../partials/navbar') %>
  </nav>

  <form id="form-create-product"method="post" action="/products/create-product/graphql" class="row g-3 mt-2">

    <div class="input-group mb-3">
      <div class="form-floating">
        <input name="productName" type="text" class="form-control" id="productName" placeholder="Product Name">
        <label for="productName">Product Name</label>
      </div>
    </div>

    <div class="form-floating">
      <textarea name="description" class="form-control" placeholder="Leave a description here" id="description" style="height: 120px"></textarea>
      <label for="description">Description</label>
    </div>

    <div class="form-floating">
      <input name="price" type="text" class="form-control" id="price" placeholder="Price">
      <label for="price">Price</label>
    </div>

    <div class="form-floating">
      <select name="brand" class="form-select" id="brand" aria-label="Brands">
        <option selected>Select one Brand</option>
        <% brands.forEach(brand => { %>
          <option value="<%= brand.id %>"><%= brand.name %></option>
        <% }) %> 
      </select>
      <label for="brand">Brand</label>
    </div>

    <div class="form-floating">
      <select class="form-select" name="category" id="category" aria-label="Categories">
        <option selected>Select one Category</option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %> 
        <label for="category">Category</label>
      </select>
    </div>

    <div class="col-12">
      <button class="btn btn-primary" type="submit">Submit form</button>
    </div>
  </form>

  <%- include('../../partials/footer') %>

</body>
</html>

